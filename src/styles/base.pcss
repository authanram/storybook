.font-sans {
    font-family:
        Inter,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        Segoe UI,
        Roboto,
        Helvetica Neue,
        Arial,
        Noto Sans,
        sans-serif,
        Apple Color Emoji,
        Segoe UI Emoji,
        Segoe UI Symbol,
        Noto Color Emoji
    !important;
}

body {
    @apply font-sans h-full overflow-y-scroll relative w-full;
}
