{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es6"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "removeComments": true,
        "sourceMap": false,
        "strict": false,
        "strictNullChecks": true,
        "target": "es6",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
